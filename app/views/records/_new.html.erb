<%= form_with(model: @record, local: true) do |form| %>
    <div class="time">
    <%= form.label :日時 %>
    <%= form.datetime_select :start_time %>
  </div>

  <div class="weight">
    <%= form.label :体重 %>
    <%= form.text_field :weight %>
  </div>

  <div class="memo">
    <%= form.label :メモ %>
    <%= form.text_area :memo %>
  </div>


  <div class="submit">
    <%= form.submit %>
  </div>

<% end %>