<div class="container">
  <div class="row">
    <div class="col-xs-12" style="margin: 10px 40%;">
      <h3><span class="under" style= "background: linear-gradient(transparent 70%, #ffa500 70%);">記録を編集する</span></h3>
        <div class="row" style="margin-bottom: 10px;"><strong>日時：</strong><%= @record.start_time.strftime("%Y-%m-%d %H:%M") %></div>
        <%= form_with model:@record, local:true do |f| %>
        <div class="row" style="margin-bottom: 10px;"><strong>体重：</strong><%= f.text_field :weight %></div>
        <div class="row" style="margin-bottom: 10px;"><strong>メモ：</strong><%= f.text_area :memo %></div>
        <div class="row" style="margin-bottom: 10px;"><%= f.submit "記録を更新", class:"btn btn-success" %></div>
        <% end %>
    </div>
  </div>
</div>