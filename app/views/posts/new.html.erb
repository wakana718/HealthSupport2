<div class="container">
 <div class="row">
   <div class="col-xs-12" style="margin: 70px 34%;">
    <div class="form-group">
     <%= form_with model:@post, local: true do |f| %>
     <%= render 'layouts/error_messages', model: f.object %><!--バリデーション-->
      <div class="row form-image"><h4>画像</h4><%= f.attachment_field :image, class:"col-xs-3" %></div>
      <div class="row form-body"><h4>投稿文</h4><%= f.text_area :body, class:"col-xs-3", rows:'3', placeholder:"ここに記入してください" %></div>
      <div class="row form-genre"><h4>カテゴリ</h4><%= f.select :genre_status, Post.genre_statuses.keys, {prompt: '選択してください'}, class: "form-control, col-xs-3" %></div>
      <br>
      <div class="row form-submit"><%= f.submit '投稿する', class:"btn btn-primary col-xs-3" %></div>
     <% end %>
    </div>
   </div>
 </div>
</div>