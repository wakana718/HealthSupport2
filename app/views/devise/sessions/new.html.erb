<div class="container">
 <div class="row">
   <div class="col-xs-8 panel panel-success"  style="text-align:center; margin: 100px; margin-left: 190px;">
     <div class="panel-heading lead">ログイン</div>
     <div class="panel-body">
       <%= form_with model: @user, url: session_path(resource_name), local: true do |f| %>
       <%= render 'layouts/error_messages', model: f.object %><!--バリデーション-->
        <div class="field" style=" margin-bottom: 20px;">
         <%= f.label :ユーザーネーム %> <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>
        <div class="field" style=" margin-bottom: 20px;">
          <%= f.label :パスワード %> <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
         <% if devise_mapping.rememberable? %>
        <div class="field" style=" margin-bottom: 20px;">
          <%= f.check_box :remember_me %><%= f.label :ログインを記憶する %>
        </div>
         <% end %>
        <div class="actions">
          <%= f.submit "ログイン", class:"col-xs-2 btn btn-success pull-right"  %>
        </div>
       <% end %>
     </div>
   </div>
  </div>
</div>
