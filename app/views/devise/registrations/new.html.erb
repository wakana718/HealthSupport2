<div class="container">
 <div class="row">
   <div class="col-xs-8 panel panel-success"  style="text-align:center; margin: 100px; margin-left: 190px;">
      <div class="panel-heading lead">新規登録</div>
      <div class="panel-body">
        <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <%= render 'layouts/error_messages', model: f.object %><!--バリデーション-->
          <div class="field" style=" margin-bottom: 20px;">
            <%= f.label :ユーザーネーム %><%= f.text_field :name, autofocus: true, autocomplete: "name" %>
          </div>
          <div class="field" style=" margin-bottom: 20px;">
            <%= f.label :メールアドレス %><%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <div class="field" style=" margin-bottom: 20px;">
            <%= f.label :パスワード %>
             <% if @minimum_password_length %>
               <em>(<%= @minimum_password_length %>文字以上)</em>
             <% end %>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
          <div class="field" style=" margin-bottom: 20px;">
            <%= f.label :パスワード（確認用） %><%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
          <div class="actions">
            <%= f.submit "新規登録", class:"col-xs-2 btn btn-success pull-right" %>
          </div>
        <% end %>
      </div>
   </div>
 </div>
</div>
