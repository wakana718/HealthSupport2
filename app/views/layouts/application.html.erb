<!DOCTYPE html>
<html>
  <head>
    <title>HealthSupport2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag('favicon.ico') %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style type="text/css">.turbolinks-progress-bar {
     position: fixed;
     display: block;
     top: 0;
     left: 0;
     height: 3px;
     background: #0076ff;
     z-index: 9999;
    transition: width 300ms ease-out, opacity 150ms 150ms ease-in;
    transform: translate3d(0, 0, 0);
    }</style>

  </head>

  <body>


    <div class="container">


  <nav id="navbar navbar-default navbar-fixed-top">
     <ul class="nav navbar-nav navbar-right">
    <% if user_signed_in? %>
      　<li class="">
    　  <span class="glyphicon glyphicon-home" aria-hidden="true">
        <%= link_to 'TOP', root_path, "data-turbolinks": false  %>
       </span>
      </li>
      <li class="list-unstyled">
        <span class="glyphicon glyphicon-user" aria-hidden="true">
        <%= link_to 'マイページ', user_path(current_user.id) %>
        </span>
      </li>
      <li class="list-unstyled">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true">
        <%= link_to '投稿する', new_post_path %>
        </span>
      </li>
      <li class="list-unstyled">
        <span class="glyphicon glyphicon-list-alt" aria-hidden="true">
        <%= link_to '体重を記録', records_path %>
        </span>
      </li>
      <li class="list-unstyled">
        <span class="glyphicon glyphicon-log-out" aria-hidden="true">
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        </span>
      </li>
    <% else %>
    　<li class="">
    　  <span class="glyphicon glyphicon-home" aria-hidden="true">
        <%= link_to 'TOP', root_path %>
       </span>
      </li>

      <li class="">
        <span class="glyphicon glyphicon-edit" aria-hidden="true">
        <%= link_to "新規登録", new_user_registration_path %>
        </span>
      </li>
      <li class="">
        <span class="glyphicon glyphicon-log-in" aria-hidden="true">
        <%= link_to "ログイン", new_user_session_path %>
        </span>
      </li>
    <% end %>
     </ul>
    </nav>

    <header>
      <div class="container">
          <%= link_to root_path do %>
 　　　    　　 <%= image_tag "logo2.png" %>
 　　　    　 <% end %>
   　  </div>
    </header>






   <div class="notifications">
  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: key) %>
  <% end %>
 </div>

    <%= yield %>


 </div>


  <footer class="footer">
    <div class="container">
      <p class="text-muted">COPYRIGHT ©2020 Health Support All Rights Reserved.</p>
    </div>
  </footer>
 </body>
</html>
