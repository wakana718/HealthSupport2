<% if post.favorite_by?(current_user) %>
  <%= link_to "", post_favorites_path(post),method: :delete, remote: true, class:"glyphicon glyphicon-star" %>
<% else %>
  <%= link_to "", post_favorites_path(post),method: :post, remote: true, class:"glyphicon glyphicon-star-empty" %>
<% end %>