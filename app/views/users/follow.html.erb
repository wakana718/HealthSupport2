<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2><span class="under" style= "background: linear-gradient(transparent 70%, #ffa500 70%);"><%= @user.name %>さんがフォローしている人</span></h2>
        <% if @user.following_user.exists? %>
          <table class="table hover">
            <thead>
              <th>ユーザー</th>
              <th colspan="3"></th>
            </thead>
            <tbody>
              <% @user.following_user.each do |user| %>
              <tr>
                <td><%= attachment_image_tag user, :profile_image, size: "70x70", class:"img-circle", fallback: "no-image-mini.jpg" %></td>
                <td><%= user.name %></td>
                <td>フォロー数：<%= user.follower.count %></td>
                <td>フォロワー数：<%= user.followed.count %></td>
                <td><%= link_to "詳細表示", user_path(user), class:"btn btn-default" %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <p>ユーザーはいません</p>
        <% end %>
    </div>
  </div>
  <div class="row">
    <%= link_to "戻る", user_path(@user), class:"btn btn-default pull-right" %>
  </div>
</div>

