
<br>
<h2><%= @user.name %>さんがフォローしている人</h2>
<% if @user.following_user.exists? %>
 <table class="table hover">
    <thead>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </thead>
    <tbody>
     <% @user.following_user.each do |user| %>
     <tr>
       <td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no-image-mini.jpg" %></td>
       <td><%= user.name %></td>
       <td>フォロー数：<%= user.follower.count %></td>
       <td>フォロワー数：<%= user.followed.count %></td>
       <td><%= link_to "show", user_path(user) %></td>
     </tr>
      <% end %>
    </tbody>
 </table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>
