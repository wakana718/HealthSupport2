<div class="container">
 <div class="row">
   <div class="col-xs-3">
     <h1>マイプロフィール</h1>
 <%= form_with model:@user, local:true do |f| %>
 <%= render 'layouts/error_messages', model: f.object %><!--バリデーション-->
  <h4>ユーザーネーム</h4>
   <label class="control-label sr-only" for="inputEmail">Name</label>
     <%= f.text_field :name %>
   </br>
  <h4>プロフィール画像</h4>
    <label class="control-label sr-only" for="inputEmail">Image</label>
      <%= f.attachment_field :profile_image %>
  </br>
  <h4>自己紹介文</h4>
    <label class="control-label sr-only" for="inputEmail">Introduction</label>
     <%= f.text_area :intoduction %>
  <%= f.submit "プロフィールを更新", class:"btn btn-default" %>
  <%= link_to "キャンセル", user_path(@user), class:"btn btn-default" %>
 <% end %>

  </div>
 </div>
</div>