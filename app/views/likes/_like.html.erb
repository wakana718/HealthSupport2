<!--いいねの表示-->
<% if post.liked_by?(current_user) %>
  <%= link_to post.likes.count, post_likes_path(post), method: :delete, remote: true, class: "glyphicon glyphicon-heart"  %>
<% else %>
  <%= link_to post.likes.count, post_likes_path(post), method: :post, remote: true, class: "glyphicon glyphicon-heart-empty" %>
<% end %>